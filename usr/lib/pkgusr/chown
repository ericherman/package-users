DAISY_CHAIN=""

for p in $(type -ap chown) ; do
  if [ ! $p -ef $0 ]; then DAISY_CHAIN=$p ; break ; fi
done

if [ ! -n "$DAISY_CHAIN" ]; then
  echo Cannot find real ${0##*/} command 
  exit 1
fi

if [ $UID == 0 ]; then
  exec $DAISY_CHAIN "$@"
fi

if [ "$1" == "root.root" ]; then
  echo 1>&2 '***' chown "$@"  
else
  $DAISY_CHAIN "$@" || exit $?
fi

exit 0
